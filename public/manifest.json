{
  "manifest_version": 3,
  "name": "PR Live Extension",
  "description": "A Chrome extension for real-time PR updates",
  "version": "1.0.0",
  "icons": {
    "128": "logo.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage", "activeTab", "notifications", "alarms", "offscreen"],
  "host_permissions": ["https://api.github.com/*", "https://github.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
